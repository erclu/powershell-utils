{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "commitizen",
      "type": "shell",
      "command": "git cz",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "copy public function names to clipboard",
      "type": "shell",
      "command": "./.vscode/Copy-PublicFunctionNames.ps1",
      "args": [
        // TODO find way to validate folder names
        "${input:moduleFolder}"
      ],
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run local CI",
      "dependsOn": [
        "Run Pester tests",
        "Run PSScriptAnalyzer"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run Pester tests",
      "type": "shell",
      "command": "Invoke-Pester -EnableExit -Path \".\"",
      "problemMatcher": [
        "$pester"
      ],
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Run PSScriptAnalyzer",
      "type": "shell",
      "command": "Invoke-ScriptAnalyzer -EnableExit -Settings PSScriptAnalyzerSettings.psd1 -Recurse -Path \".\";",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "moduleFolder",
      "description": "write name (case insensitive) of the target module",
      "type": "promptString"
    }
  ]
}
